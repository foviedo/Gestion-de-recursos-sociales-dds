<html>
  <head>
    <meta charset="utf-8">
    <title>Formulario de ingreso</title>
    <link rel="stylesheet" href="form-ingreso/css/master.css">
  </head>
  <body>

    <div class="login-box">
      <img src="form-ingreso\img\download.jpg" class="avatar" alt="Avatar Image">
      <h1>Registrarse en el sistema</h1>
      <form method="POST" action="/registro">
        <!-- USERNAME INPUT -->
        <label for="username">Nombre de usuario</label>
        <input type="text" name = "usuario" placeholder="Ingrese su nombre de Usuario">
        <!-- PASSWORD INPUT -->
        <label for="password">Contraseña</label>
        <input type="password" name = "password" placeholder="Ingrese su Contraseña">
        <input type="submit" value="Registrarse">
      </form>
    </div>
  </body>
</html>
